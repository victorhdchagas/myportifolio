---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
---

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

<div id="share-modal" class="share-modal-overlay" style="display: none;">
  <div class="share-modal">
    <div class="share-modal-header">
      <h3>Compartilhar artigo</h3>
      <button class="close-button" onclick="closeShareModal()" aria-label="Fechar">
        ✕
      </button>
    </div>

    <div class="share-options">
      <button class="share-option" onclick="copyToClipboard()">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        Copiar Link
      </button>

      <button class="share-option" onclick="shareOnX()">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
        Compartilhar no X
