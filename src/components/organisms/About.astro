---
// src/components/organisms/About.astro
import Card from '../atoms/Card.astro'
import { db, PersonalInfo } from 'astro:db'

export interface Props {
  id?: string
}

const { id } = Astro.props

// Query personal info from database
const personalInfo = await db.select().from(PersonalInfo).limit(1)
const data = personalInfo[0]

const title = data?.aboutTitle || 'About Me'
const bio =
  data?.aboutBio ||
  'Com mais de 13 anos de experi√™ncia em desenvolvimento de tecnologias, tenho expertise em diversas linguagens de programa√ß√£o, incluindo Java, C#, VB.Net, Delphi e Node.js. Atuei em projetos utilizando metodologias √°geis como SCRUM, utilizando os princ√≠pios SOLID de desenvolvimento de software.'
const skills = Array.isArray(data?.aboutSkills)
  ? data.aboutSkills
  : [
      'Java',
      'C#',
      'VB.Net',
      'Delphi',
      'Node.js',
      'React',
      'Vue.js',
      'Angular',
      'NestJS',
      'PostgreSQL',
      'MySQL',
      'SQL Server',
      'Docker',
      'GitHub Actions',
      'Kubernetes',
    ]
const experience = data?.aboutExperience || '13+ years'
---

<section class="about" id={id}>
  <div class="container">
    <div class="about-header">
      <h2 class="section-title">{title}</h2>
      <div class="title-decoration">
        <div class="decoration-line"></div>
        <div class="decoration-dot"></div>
        <div class="decoration-line"></div>
      </div>
    </div>

    <div class="about-content">
      <div class="about-main">
        <Card shadow="outset" class="bio-card">
          <div class="bio-header">
            <div class="bio-icon">üë®‚Äçüíª</div>
            <h3>Minha jornada</h3>
          </div>
          <p class="about-bio">{bio}</p>
          <div class="experience-highlight">
            <div class="experience-number">{experience}</div>
            <div class="experience-label">de experi√™ncia</div>
          </div>
        </Card>

        <Card shadow="outset" class="stats-card">
          <h3>Status</h3>
          <div class="stats-grid">
            <div class="stat-item">
              <div class="stat-number">6+</div>
              <div class="stat-label">Empresas</div>
            </div>
            <div class="stat-item">
              <div class="stat-number">10+</div>
              <div class="stat-label">Projetos</div>
            </div>
            <div class="stat-item">
              <div class="stat-number">15+</div>
              <div class="stat-label">Tecnologias</div>
            </div>
            <div class="stat-item">
              <div class="stat-number">1</div>
              <div class="stat-label">Pa√≠s</div>
            </div>
          </div>
        </Card>
      </div>

      <div class="skills-section">
        <Card shadow="outset" class="skills-card">
          <div class="skills-header">
            <div class="skills-icon">üöÄ</div>
            <h3>Skills & Technologies</h3>
          </div>
          <div class="skills-grid">
            {
              skills.map((skill: string) => (
                <span class="skill-tag">{skill}</span>
              ))
            }
          </div>
        </Card>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    padding: 5rem 0;
    background: var(--bg-tertiary);
    scroll-margin-top: 70px;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .about-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .title-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
  }

  .decoration-line {
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--text-accent),
      transparent
    );
    flex: 1;
    max-width: 100px;
  }

  .decoration-dot {
    width: 8px;
    height: 8px;
    background: var(--text-accent);
    border-radius: 50%;
  }

  .about-content {
    display: grid;
    gap: 3rem;
  }

  .about-main {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .bio-card {
    grid-column: 1 / -1;
  }

  .bio-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .bio-icon {
    font-size: 2rem;
  }

  .bio-header h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .about-bio {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .experience-highlight {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: linear-gradient(
      135deg,
      oklch(65% 0.2 45 / 0.1) 0%,
      oklch(75% 0.2 45 / 0.1) 100%
    );
    border-radius: 12px;
    border: 1px solid var(--border-color);
  }

  .experience-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-accent);
  }

  .experience-label {
    font-size: 1rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .stats-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .stat-item {
    text-align: center;
    padding: 1rem;
    background: var(--bg-tertiary);
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-accent);
    display: block;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text-secondary);
    font-weight: 500;
    margin-top: 0.5rem;
  }

  .skills-section {
    margin-top: 2rem;
  }

  .skills-card {
    width: 100%;
  }

  .skills-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .skills-icon {
    font-size: 2rem;
  }

  .skills-header h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1rem;
  }

  .skill-tag {
    background: linear-gradient(
      135deg,
      oklch(65% 0.2 45) 0%,
      oklch(75% 0.2 45) 100%
    );
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 25px;
    text-align: center;
    font-weight: 500;
    font-size: 0.9rem;
    box-shadow: 0 2px 4px oklch(65% 0.2 45 / 0.2);
    transition: transform 0.2s ease;
  }

  .skill-tag:hover {
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .about-main {
      grid-template-columns: 1fr;
    }

    .bio-card {
      grid-column: 1;
    }

    .section-title {
      font-size: 2rem;
    }

    .experience-highlight {
      flex-direction: column;
      text-align: center;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .skills-grid {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    }

    .title-decoration {
      gap: 0.5rem;
    }

    .decoration-line {
      max-width: 50px;
    }
  }
</style>
